<Window x:Class="WPF_MSIX_Detect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MSIX_Detect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock x:Name="txtResult"  Margin="20" HorizontalAlignment="Center"/>
        <Button x:Name="btnShowToast"  Content="Show Toast Notification" Click="Button_Click"/>
    </StackPanel>
</Window>
